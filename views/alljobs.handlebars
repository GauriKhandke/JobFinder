  <div class="container mb-3">
  <div class="row mr-2 ml-2" id="jobs">
    <div class="col-md-1">
    </div>
   
      {{#each job}}
       <div id="job">
    <div class=" card shadow rounded col-sm-10 col-md-10 col-lg-8 bg-dark text-white greenborder" style="margin:auto;padding:auto;">
      <div class="card-body">
           <div class="row">
          
            <h4 class="ml-3">{{this.role}}</h4> <p class= " ml-3"><span class="text-info">{{jobtype}}</span></p>
           </div>
          <p><strong>{{this.company}}</strong></p> 
          
          <p>Description : <span class="text-info">{{this.description}}</span></p>

          <p>Salary :  <span class="text-info">{{this.salary}}</span></p>
          <p>Job Location : <span class="text-info">{{this.joblocation}}</span></p>
         
          <div class="tech">
            <p>Technologies Needed: <span class="text-info">{{this.technologies}}</span></p>
          </div>
          <div>
            <a href="mailto:{{this.contact_email}}" class="btn btn-md btn-info mb-2">Contact</a>
          </div>
       
      </div>
    </div>
    </div>
     {{/each}}
  </div>

    <div class="col-sm-1 col-md-1">
    </div>
  </div>
